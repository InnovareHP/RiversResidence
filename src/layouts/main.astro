---
// Import styles and components
import '../styles/global.css';
import MainLayout from "../components/layout/MainLayout";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Title & Description -->
    <title>Rivers Residence | Where Everything Flows, Healing Follows</title>
    <meta name="description" content="Rivers Residence offers compassionate and dignified housing for individuals with behavioral health needs. Experience a safe, structured, and supportive living environment." />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">

    <!-- Open Graph for Social Sharing -->
    <meta property="og:title" content="Rivers Residence" />
    <meta property="og:description" content="Compassionate housing for behavioral health — dignity, healing, and support." />
    <meta property="og:image" content="/image/rivers-residence-meta.jpeg" />
    <meta property="og:url" content="https://riversresidence.com" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Rivers Residence" />
    <meta name="twitter:description" content="Compassionate housing for behavioral health — dignity, healing, and support." />
    <meta name="twitter:image" content="/image/rivers-residence-meta.jpeg" />

    <!-- Author and Generator -->
    <meta name="author" content="Rivers Residence" />
    <meta name="generator" content="Astro" />
  </head>

  <body>

     <MainLayout client:load>
      <slot />
    </MainLayout>

  </body>
</html>
