---
import '../styles/global.css';
// Component Imports

import ObediHomeIndex from '../index-page/index-page';

// Full Astro Component Syntax:
// https://docs.astro.build/basics/astro-components/

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
	  
		<!-- Title & Description -->
		<title>Obedi Home | Compassionate Behavioral Health Living</title>
		<meta name="description" content="Obedi Home provides a safe and supportive environment for male residents with behavioral health needs, offering privacy, personalized care, and community integration." />
	  
		<!-- Favicon -->

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">

		<!-- Open Graph for Social Sharing -->
		<meta property="og:title" content="Obedi Home" />
		<meta property="og:description" content="Supportive behavioral health living for men — privacy, care, dignity, and healing." />
		<meta property="og:image" content="/image/obedi-image.png" />
		<meta property="og:url" content="https://obedihomes.com" />
		<meta property="og:type" content="website" />
	  
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Obedi Home" />
		<meta name="twitter:description" content="Supportive behavioral health living for men — privacy, care, dignity, and healing." />
		<meta name="twitter:image" content="/image/obedi-image.png" />
	  
		<!-- Author and Generator -->
		<meta name="author" content="Obedi Home Team" />
		<meta name="generator" content="Astro" />
	  </head>
	  

	<body>
		<ObediHomeIndex client:load />
	</body>
</html>
